<h1>Burgers!</h1>

<h2>Available Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless this.isDevoured}}
       <div>
          <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
            <p style="display:inline-block">#Burger Name#</p><button type="submit" class='burgerAvailable' style="display:inline-block">Devour!{{this.burgers}}</button>
          </form>
        </div>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if isDevoured}}
      <div>
        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
          <button type="submit" class='burgerDevoured'> {{this.burgers}}</button>
        </form>
      </div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="isdevoured">Is Devoured?</label><br>
    <input type="radio" name="burgerstate" value="1" checked> Devoured!<br>
    <input type="radio" name="burgerstate" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>